{
  "name": "universal-react-redux",
  "version": "1.0.0",
  "description": "universal react redux boilerplate",
  "main": "index.js",
  "repository": {
    "url": "git@github.com:johnnyghost/universal-react-redux.git",
    "type": "git"
  },
  "scripts": {
    "clean": "./node_modules/.bin/rimraf dist",
    "babel-node": "babel-node --presets es2015,stage-0 --ignore node_modules,dist",
    "lint": "./node_modules/.bin/eslint --config .eslintrc src",
    "pre-build": "npm run clean && npm run lint",
    "start": "NODE_ENV=prod npm run build:production && NODE_ENV=prod npm run babel-node -- server/index.js",

    "watch:client": "npm run clean && ./node_modules/.bin/webpack-dev-server --progress --config ./configs/webpack/./webpack.development.client.babel.js",
    "watch:server": "npm run clean && NODE_ENV=development ./node_modules/.bin/nodemon",

    "build:client": "webpack --progress --colors --config ./configs/webpack/client/webpack.config",
    "build:server": "webpack --progress --colors --config ./configs/webpack/server/webpack.config",

    "build:development": "NODE_ENV=dev npm run build:client && NODE_ENV=dev npm run build:server",
    "build:production": "npm run pre-build && NODE_ENV=prod npm run build:client && NODE_ENV=prod npm run build:server",
    "build:staging": "npm run pre-build && NODE_ENV=staging npm run build:client && NODE_ENV=staging npm run build:server",

    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "react",
    "redux",
    "isomorphic",
    "universal",
    "webpack",
    "express",
    "boilerplate",
    "babel"
  ],
  "author": "johnnyghost <kemarx@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "4.14.0",
    "react": "15.4.1",
    "react-dom": "15.4.1"
  },
  "devDependencies": {
    "babel-core": "6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "6.2.8",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-plugin-typecheck": "3.9.0",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "babel-runtime": "6.18.0",
    "chunk-manifest-webpack-plugin": "^1.0.0",
    "css-loader": "0.26.0",
    "eslint": "3.11.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-flowtype": "2.28.2",
    "eslint-plugin-react": "6.7.1",
    "html-loader": "0.4.4",
    "html-webpack-plugin": "2.24.0",
    "json-loader": "0.5.4",
    "nodemon": "1.11.0",
    "postcss-easy-import": "1.0.1",
    "postcss-import": "8.1.0",
    "postcss-loader": "0.11.1",
    "precss": "1.4.0",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "webpack": "2.1.0-beta.25",
    "webpack-dev-server": "1.14.1",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-manifest-plugin": "^1.1.0",
    "yargs": "6.5.0"
  }
}
